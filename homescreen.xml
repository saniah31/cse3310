<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen_bg"
    tools:context=".HomeScreen">


    <TextView
        android:layout_width="272dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="538dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/burn_it_down"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="87dp"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="257dp"
        android:layout_marginBottom="373dp"
        android:background="@drawable/play"
        android:backgroundTint="@color/red"
        app:iconTint="#FF000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/profile_button"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="597dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="73dp"
        android:background="@drawable/profile"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/store_button"
        android:layout_width="84dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="190dp"
        android:background="@drawable/store"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/setting_button"
        android:layout_width="88dp"
        android:layout_height="83dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="188dp"
        android:background="@drawable/setting"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/leaderboard_button"
        android:layout_width="85dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="378dp"
        android:background="@drawable/leaderboard"
        android:backgroundTint="@color/orange"
        android:backgroundTintMode="add"
        app:icon="@color/black"
        app:iconTint="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="279dp"
        android:layout_marginBottom="339dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/play"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="339dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/leaderboard"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="162dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/settings"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
